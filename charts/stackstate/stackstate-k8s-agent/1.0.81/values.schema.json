{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://stackstate.io/example.json",
  "type": "object",
  "default": {},
  "title": "StackState Agent Helm chart values",
  "required": [
    "stackstate",
    "clusterAgent"
  ],
  "properties": {
    "stackstate": {
      "type": "object",
      "required": [
        "cluster",
        "url"
      ],
      "properties": {
        "apiKey": {
          "type": "string"
        },
        "cluster": {
          "type": "object",
          "required": ["name"],
          "properties": {
            "name": {
              "type": "string",
              "pattern": "^[a-z0-9]([a-z0-9\\-\\.]*[a-z0-9])$"
            },
            "authToken": {
              "type": "string"
            }
          }
        },
        "url": {
          "type": "string"
        }
      }
    },
    "clusterAgent": {
      "type": "object",
      "required": [
        "config"
      ],
      "properties": {
        "config": {
          "type": "object",
          "required": [
            "events"
          ],
          "properties": {
            "events": {
              "type": "object",
              "properties": {
                "categories": {
                  "type": "object",
                  "patternProperties": {
                    ".*": {
                      "type": [
                        "string"
                      ],
                      "enum": [
                        "Alerts",
                        "Activities",
                        "Changes",
                        "Others"
                      ]
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
